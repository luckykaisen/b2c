<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper SYSTEM "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.atguigu.dao.SpuMapper">

	<insert id="save_spu" parameterType="com.atguigu.bean.T_MALL_PRODUCT" useGeneratedKeys="true" keyColumn="id" keyProperty="id">
		insert into t_mall_product(shp_mch,shp_tp,flbh1,flbh2,pp_id,shp_msh)
		 values
		 (
		 	#{shp_mch},
		 	#{shp_tp},
		 	#{flbh1},
		 	#{flbh2},
		 	#{pp_id},
		 	#{shp_msh}
		 )
	</insert>
	
	
	<insert id="save_spu_image">
		insert into t_mall_product_image(shp_id , url) values
		<foreach collection="imageName" item="image" separator=",">
			(#{shp_id},#{image})
		</foreach>
	</insert>
</mapper>
